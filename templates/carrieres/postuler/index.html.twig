{% extends 'base.html.twig' %}

{% block title %}Candidature Spontanee{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('nav')}}    
    {{ encore_entry_link_tags('candidature')}}
    {{ encore_entry_link_tags('footer')}}
{% endblock %}

{% block body %}
    {{ include('home/nav.html.twig') }}
    <main>
        <section>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Titre de l'offre</label>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Type de contrat</label>
                </div>
            </div>
            <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Ville / Code Postal</label>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Pays</label>
                    </div>
                </div>
        </section>

        {########## FORMULAIRE ##########}
        {{ form_start(form) }}
        <form>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <div>{{ form_row(form.email) }}</div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <div>{{ form_row(form.lastname) }}</div>
                </div>
                <div class="form-group col-md-6">
                    <div>{{ form_row(form.firstname) }}</div>
                </div>
            </div>
            <div class="form-row">
                <div class="col md-6">
                    {{ form_row(form.cv) }}
                </div>
                <div class="col md-6">
                    {{ form_row(form.lm) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col">{{ form_row(form.message) }}</div>
            </div>
        {{ form_rest(form) }}

        
            <button type="submit">{{ button|default('Postuler') }}</button>
         
        </form>
        {{ form_end(form) }}
    </main>

    {{ include('includes/footer.html.twig') }}

{% endblock %}
