{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('nav')}}
    {{ encore_entry_link_tags('contact')}}
    {{ encore_entry_link_tags('footer')}}
{% endblock %}

{% block body %}

{{ include('home/nav.html.twig') }}

    <main>
        <div class="container">
            <div class="form-area">
                <form role="form">
                    <h1>Contact</h1>
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="exampleFormControlFile1">Nom</label>
                            <input type="text" class="form-control" id="name" name="name"required>
                        </div>
                        <div class="form-group col-6">
                            <label for="exampleFormControlFile1">Prénom</label>
                            <input type="text" class="form-control" id="name" name="firstname"required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="exampleFormControlFile1">Email</label>
                            <input type="text" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group col-6">
                            <label for="exampleFormControlFile1">Téléphone</label>
                            <input type="text" class="form-control" name="mobile" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col col-6">
                            <label for="exampleFormControlFile1">Société</label>
                            <input type="text" class="form-control"name="society" required>
                        </div>
                        <div class="form-group col col-6">
                            <label for="exampleFormControlFile1">Objet</label>
                            <select class="form-control">
                                <option>Demande de renseignements</option>
                                <option>Demande de devis</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col col-12">
                            <label for="exampleFormControlFile1">Sujet</label>
                            <input type="text" class="form-control" name="subject" required>
                        </div>
                        <div class="form-group col-12">
                            <textarea class="form-control" type="textarea" id="message" placeholder="Message" maxlength="140" rows="7"></textarea>
                        </div>
                    </div>
                    <button type="submit">Envoyer</button>
                </form>
            </div>
        </div>
    </main>

    {{ include('includes/footer.html.twig') }}

{% endblock %}
