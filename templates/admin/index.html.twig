    <section class= "card">
        <h2 class="card-title">Dernières offres</h2>
        <ul  class="list-group list-group-flush"> 
            {% for offer in offers %}
                <li class="list-group-item">{{ offer.title }} {{ offer.id }}</li>
            {% endfor %}
        </ul>
    </section>
    <section class= "card">
        <h2 class="card-title">Dernières candidatures</h2>    
        <ul class="list-group list-group-flush"> 
            {% for candidature in candidatures %}
                <li class="list-group-item">{{ candidature.id }}</li>
            {% endfor %}
        </ul>
    </section> 

</main>
