{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('template')}}
{% endblock %}


{% block title %}Statut{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Statut</h1>

    <table class="tableau table table-striped table-hover table-bordered">
        <tbody>
            <tr>
                <th style="width: 80%;">Créer le</th>
                <td>{{ status.createdAt ? status.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th style="width: 80%;">Modifier le</th>
                <td>{{ status.modifiedAt ? status.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th style="width: 80%;">ID</th>
                <td>{{ status.id }}</td>
            </tr>
            <tr>
                <th style="width: 80%;">Nom</th>
                <td>{{ status.name }}</td>
            </tr>
            <tr>
                <th style="width: 80%;">Is_active</th>
                <td>{{ status.isActive ? 'Actif' : 'Inactif' }}</td>
            </tr>
        </tbody>
    </table>


    <div class="text-right mt-4">
        <a href="{{ path('status_edit', {'id': status.id}) }}" class="btn btn-primary">Éditer</a>
    </div>
</div>

{% endblock %}
