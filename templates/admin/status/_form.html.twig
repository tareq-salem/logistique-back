{{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col md-2">{{ form_row(form.name) }}</div>
    </div>
    <div class="row">
        <div class="col md-2">{{ form_row(form.is_active) }}</div>
    </div>
