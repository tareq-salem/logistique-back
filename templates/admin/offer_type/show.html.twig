{% extends 'admin/base_admin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard')}}
{% endblock %}

{% block title %}OfferType{% endblock %}

{% block body %}
    <main><div class="card"><div class="card-body"></div></div></main>
    <h1>OfferType</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Created_at</th>
                <td>{{ offer_type.createdAt ? offer_type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ offer_type.modifiedAt ? offer_type.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ offer_type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offer_type.name }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ offer_type.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_type_index') }}">back to list</a>

    <a href="{{ path('offer_type_edit', {'id': offer_type.id}) }}">edit</a>

