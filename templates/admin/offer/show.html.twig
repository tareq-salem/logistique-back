{% extends 'admin/base_admin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard')}}
{% endblock %}

{% block title %}Offer{% endblock %}

{% block body %}
    <main>
        <div class="card">
            <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Offer</h3>
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Modified_at</th>
                        <td>{{ offer.modifiedAt ? offer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Id</th>
                        <td>{{ offer.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ offer.title }}</td>
                    </tr>
                    <tr>
                        <th>Reference</th>
                        <td>{{ offer.reference }}</td>
                    </tr>
                    <tr>
                        <th>Is_active</th>
                        <td>{{ offer.isActive ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>End_publication_date</th>
                        <td>{{ offer.endPublicationDate ? offer.endPublicationDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Start_publication_date</th>
                        <td>{{ offer.startPublicationDate ? offer.startPublicationDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Salary</th>
                        <td>{{ offer.salary }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ offer.description }}</td>
                    </tr>
                    <tr>
                        <th>Duration</th>
                        <td>{{ offer.duration }}</td>
                    </tr>
                    <tr>
                        <th>Hour_per_week</th>
                        <td>{{ offer.hourPerWeek }}</td>
                    </tr>
                    <tr>
                        <th>Availability</th>
                        <td>{{ offer.availability }}</td>
                    </tr>
                    <tr>
                        <th>Required_profil</th>
                        <td>{{ offer.requiredProfil }}</td>
                    </tr>
                    <tr>
                        <th>Required_experience</th>
                        <td>{{ offer.requiredExperience }}</td>
                    </tr>
                    <tr>
                        <th>Benefits</th>
                        <td>{{ offer.benefits }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('offer_index') }}">back to list</a>

                <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>

                {{ include('offer/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}
