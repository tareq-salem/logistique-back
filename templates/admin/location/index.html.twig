{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('template')}}
{% endblock %}

{% block title %}Location{% endblock %}

{% block body %}
    <div class="container mt-4">
    <h1>Location</h1>

    <table class="tableau table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th style="width: 75%;">Ville</th>
                <th>Code Postale</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.city }}</td>
                <td>{{ location.postalCode }}</td>
                <td>
                    <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-warning" style="margin-right: 5px;"><i style="color: white;" class="fas fa-edit"></i></a>
                    <a href="{{ path('location_delete', {'id': location.id}) }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="text-right mt-4">
    <a href="{{ path('location_new') }}" class="btn btn-primary">Cr√©er</a>
        </div>
    </div>
{% endblock %}
