{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('template')}}
{% endblock %}


{% block title %}Type de contrat{% endblock %}


{% block body %}
    <div class="container mt-4">
    <h1>Type de contrat</h1>

    <table class="tableau table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th style="width: 80%;">Nom</th>
                <th>Couleurs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract_type in contract_types %}
            <tr>
                <td>{{ contract_type.name }}</td>
                <td>
                    <span style="display: block; background-color: {{ contract_type.color }}; width: 25px; height: 25px; -webkit-border-radius: 50%;-moz-border-radius: 50%;border-radius: 50%;">
                    </span>
                </td>
                <td>
                    <a href="{{ path('contract_type_edit', {'id': contract_type.id}) }}" class="btn btn-warning" style="margin-right: 5px;"><i style="color: white;" class="fas fa-edit"></i></a>
                    <a href="{{ path('contract_type_delete', {'id': contract_type.id}) }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-right mt-4">
        <a href="{{ path('contract_type_new') }}" class="btn btn-primary">Cr√©er</a>
    </div>
    </div>

{% endblock %}
