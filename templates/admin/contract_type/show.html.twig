{% extends 'admin/base_admin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard')}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('template')}}
{% endblock %}

{% block title %}ContractType{% endblock %}

{% block body %}
    <main>
        <div class="card">
            <h3 class="card-header text-center font-weight-bold text-uppercase py-4">ContractType</h3>
            <div class="card-body">
                <table class="tableau table table-striped table-hover table-bordered">
                    <tbody>
                    <tr>
                        <th style="width: 80%;">Créer le</th>
                        <td>{{ contract_type.createdAt ? contract_type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th style="width: 80%;">Modifié le</th>
                        <td>{{ contract_type.modifiedAt ? contract_type.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th style="width: 80%;">ID</th>
                        <td>{{ contract_type.id }}</td>
                    </tr>
                    <tr>
                        <th style="width: 80%;">Nom</th>
                        <td>{{ contract_type.name }}</td>
                    </tr>
                    <tr>
                        <th style="width: 80%;">Couleur</th>
                        <td>{{ contract_type.color }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="text-right mt-4">
                    <a href="{{ path('contract_type_edit', {'id': contract_type.id}) }}" class="btn btn-primary">Éditer</a>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
